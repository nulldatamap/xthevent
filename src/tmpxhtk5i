  let args = &vargs[1..];
  let options = get_options();
  let matches = o

  // let mut conn = Connection::connect( DB_ADDR, &SslMode::None).unwrap();
  let mut server = Nickel::new();
  
  server.get( "**", middleware! { |request|
    format!( "{:?}", request.origin.uri )
  } );
  
